<?xml version="1.0" encoding="utf-8"?>
<!-- dialog_layout.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Бронювання нового номера"
            android:textSize="18sp"
            app:fontFamily="sans-serif-medium" />

        <EditText
            android:id="@+id/editTextNumberRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:hint="Номер кімнати" />

        <EditText
            android:id="@+id/editTextPIB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="ПІБ особи, що бронює номер" />

        <EditText
            android:id="@+id/editTextPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="phone"
            android:hint="Номер телефону" />

        <EditText
            android:id="@+id/editTextPassport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="Серія та номер паспорта" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/add_button"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="Додати"
                app:backgroundTint="#009688"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/cancel_button"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Скасувати"
                app:backgroundTint="#FF0000"
                app:rippleColor="@color/teal_700"
                />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>